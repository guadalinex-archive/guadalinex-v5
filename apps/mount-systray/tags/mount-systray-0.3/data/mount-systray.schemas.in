<gconfschemafile>
	<schemalist>
		<schema>
			<key>/schemas/apps/mount-systray/click_on_device_action</key>
			<applyto>/apps/mount-systray/click_on_device_action</applyto>
			<type>string</type>
			<default>unmount</default>
			<locale name="C">
				<short>Action when user click on device</short>
				<long>Action to do when the user click over one mounted device.</long>
			</locale>
		</schema>
      		<schema>
			<key>/schemas/apps/mount-systray/minutes_warning</key>
			<applyto>/apps/mount-systray/minutes_warning</applyto>
			<type>int</type>
			<default>20</default>
			<locale name="C">
				<short>Warning every selected minutes</short>
				<long>Show a warning to the user every selected minutes.</long>
			</locale>
		</schema>
      		<schema>
			<key>/schemas/apps/mount-systray/show_notify</key>
			<applyto>/apps/mount-systray/show_notify</applyto>
			<type>bool</type>
			<default>false</default>
			<locale name="C">
				<short>Show a notification when warning</short>
				<long>Show a notification too when the warning happens.</long>
			</locale>
		</schema>
      		<schema>
			<key>/schemas/apps/mount-systray/show_notify_detected</key>
			<applyto>/apps/mount-systray/show_notify_detected</applyto>
			<type>bool</type>
			<default>false</default>
			<locale name="C">
				<short>Notify when a new device is detected</short>
				<long>Show a notification when a new device is detected warning about the volume umount importance.</long>
			</locale>
		</schema>
      		<schema>
			<key>/schemas/apps/mount-systray/hide_systray</key>
			<applyto>/apps/mount-systray/hide_systray</applyto>
			<type>bool</type>
			<default>false</default>
			<locale name="C">
				<short>Hide system tray icon when no devices mounted</short>
				<long>If haven't devices mounted detected, hide the system tray icon.</long>
			</locale>
		</schema>
		<schema>
			<key>/schemas/apps/mount-systray/blink_all_time</key>
			<applyto>/apps/mount-systray/blink_all_time</applyto>
			<type>bool</type>
			<default>true</default>
			<locale name="C">
				<short>Blink all the time when some device is mounted</short>
				<long>If any device is mounted, blink all the time warning to unmount.</long>
			</locale>
		</schema>
	</schemalist>
</gconfschemafile>
